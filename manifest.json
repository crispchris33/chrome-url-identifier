{
    "manifest_version": 3,
    "name": "Link Hover Info",
    "version": "1.0",
    "description": "Displays the real URL of links in a floating window on hover.",
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon_16x16.png",
        "48": "icon_48x48.png",
        "128": "icon_128x128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["script.js"],
        "css": ["style.css"]
      }
    ],
    "icons": {
      "16": "icon_16x16.png",
      "48": "icon_48x48.png",
      "128": "icon_128x128.png"
    }
  }
  